<!-- 分级别异步文件日志输出配置 -->
<configuration>
    <!-- 日志级别 -->
    <property name="logLevel" value="DEBUG"></property>
    <!-- 日志地址 -->
    <property name="logPath" value="/Volumes/data/tmp/log/lcd"></property>
    <!-- 最大保存时间 -->
    <property name="maxHistory" value="30"/>
    <property name="maxFileSize" value="1000MB"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern> [lcd][%d{yyyy-MM-dd HH:mm:ss.SSS}][%thread][%-5level][%X{transId}][%logger{50}] - %msg%n</pattern>

        </encoder>
    </appender>
    <appender name="FILE_INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logPath}/lcd.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件输出的文件名 -->
            <FileNamePattern>${logPath}/lcd.log.%d{yyyy-MM-dd}.gz
            </FileNamePattern>
            <!-- 日志文件保留天数 -->
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern> [lcd][%d{yyyy-MM-dd HH:mm:ss.SSS}][%thread][%-5level][%X{transId}][%logger{50}] - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <!-- appender referenced after it is defined -->
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE_INFO"/>
    </root>
</configuration>
